{
	"manifest_version": 2,
	"name": "Read Now",
	"version": "1.0",
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_icon": "fire.png",
		"default_popup": "index.html",
		"default_title": "Trending News"
	}
}